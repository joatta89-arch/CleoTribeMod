<Defs>
	<!-- ============================================ -->
	<!-- 기본 플레이어 부족 전사 (Base) -->
	<!-- ============================================ -->
	<PawnKindDef Name="Cleo_TribalBase" Abstract="True">
		<race>Human</race>
		<defaultFactionType>Cleo_PlayerTribe</defaultFactionType>
		<backstoryCategories>
			<li>Tribal</li>
		</backstoryCategories>
		<chemicalAddictionChance>0.05</chemicalAddictionChance>
		<invNutrition>2.5</invNutrition>
		<itemQuality>Poor</itemQuality>
		<backstoryCryptosleepCommonality>0</backstoryCryptosleepCommonality>
		<forceNormalGearQuality>true</forceNormalGearQuality>

		<!-- 필수: 초기 저항력 범위 (포로/노예화 난이도) -->
		<initialResistanceRange>10~20</initialResistanceRange>
		<initialWillRange>1~3</initialWillRange>

		<!-- 클레오 부족 이름 공유 -->
		<nameMaker>NamerPersonCleoTribal</nameMaker>

		<!-- 기본 외모 -->
		<apparelTags>
			<li>Tribal</li>
			<li>Cleo_Apparel</li>
		</apparelTags>
		<invFoodDef>
			<li>Pemmican</li>
		</invFoodDef>

		<combatEnhancingDrugsChance>0.05</combatEnhancingDrugsChance>
		<combatEnhancingDrugsCount>0~1</combatEnhancingDrugsCount>

	</PawnKindDef>
	
