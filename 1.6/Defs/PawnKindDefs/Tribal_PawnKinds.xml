		<combatPower>100</combatPower>
		
		<gearHealthRange>0.5~1.5</gearHealthRange>
		<apparelRequired>
			<li>CuriosityBot_TigerPanties</li>
		</apparelRequired>
		<apparelTags>
			<li>Tribal</li>
			<li>Cleo_Apparel</li>
		</apparelTags>
		<apparelMoney>300~450</apparelMoney>
		<apparelAllowHeadgearChance>0.4</apparelAllowHeadgearChance>
		
		<skills>
			<li>
				<skill>Melee</skill>
				<range>4~6</range>
			</li>
		</skills>
	</PawnKindDef>
		
