<?xml version="1.0" encoding="utf-8"?>
<Defs>

	<!-- 방패 블록 효과음 -->
	<SoundDef>
		<defName>CuriosityBot_ShieldBlock</defName>
		<context>MapOnly</context>
		<!-- 사운드 파일 경로 (Sounds/ 폴더 기준) -->
		<subSounds>
			<li>
				<grains>
					<li Class="AudioGrain_Folder">
						<clipFolderPath>ShieldBlock</clipFolderPath>
					</li>
				</grains>
				
				<!-- 볼륨 -->
				<volumeRange>
					<min>25</min>
					<max>30</max>
				</volumeRange>
				
				<!-- 피치 (음높이 변화) -->
				<pitchRange>
					<min>0.95</min>
					<max>1.05</max>
				</pitchRange>
				<!-- 거리 감쇠 -->
				<distRange>
					<min>0</min>
					<max>40</max>
				</distRange>
			</li>
		</subSounds>
	</SoundDef>
	
